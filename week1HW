/*Filename: h1_var_format_alexisb.cpp
Author: ALexis Barajas
Desc: Program that uses variables to hold values & iomanip functions to format output.
Objective: Demonstrate declaration, assignment and output of an integer, string, character and float. 
Output data values in a nicely formatted table.
*/

#include <iostream> 
#include <iomanip>
#include <string>


using namespace std;

int main()
{
    //Declare
    string author1;
    string author2;
    string author3;
    
    string title1;
    string title2;
    string title3;
    
    int year1;
    int year2;
    int year3;
    
    //Initialize
    
    author1 = "Eisley";
    author2 = "Gilbert";
    author3 = "Paton";
    
    title1 = "All The Strange Hours";
    title2 = "Big Magic";
    title3 = "Too Late The Phalarope";
    
    year1 = 1975;
    year2 = 2017;
    year3 = 1996;
    
    //Output
    
    
   cout << author1 << '\t' << title1 << setw(8) << year1 << endl;
   cout << author2 << '\t' << title2 << setw(20) << year2 << endl;
   cout << author3 << '\t' << title3 << setw(7) << year3 << endl;


    
    
}
